<div class = "user-container">
  <%= image_tag(user.role_image, class: "img-responsive") %>
  <div class = "user-info">
    <div class = "user-top-row">
      <h3><%= link_to user.name, user %> </h3>
    </div>
    <div class = "user-bottom-row">
      <i><%= user.created_at %></i>
    </div>
  </div>
</div>
